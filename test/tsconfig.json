{ // https://www.typescriptlang.org/tsconfig
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "..",
		"declaration": false,
		"noEmit": true,
		"esModuleInterop": true, // Needed by intersect
		"importHelpers": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"paths": {},
		"resolveJsonModule": true,
		"rootDir": "..",
		"rootDirs": [
			"../src",
			"../node_modules",
			"../test"
		],
		"skipLibCheck": true,
		"sourceMap": true, // Needed to get correct Uncovered Line numbers
		"target": "ES2022",
		"types": [
			"bun",
			"jest",
			"node"
		]
	},
	"include": [
		"./**/*.ts"
	]
}
